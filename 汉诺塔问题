void hannuota(int,char,char,char);
int main(){
    int n;
    char one='a';
    char two='b';
    char three='c';
    printf("输入汉诺塔的大小\n");
    scanf("%d",&n);
    hannuota(n,one,two,three);
    return 0;
}
void hannuota(int n,char one,char two,char three){
    if(n==1){
        printf("****编号为%d从%c移动到%c柱子\n",n,one,three);
    }
    else{
        hannuota(n-1,one,three,two);
        printf("编号为%d从%c移动到%c柱子\n",n,one,three);
        hannuota(n-1,two,one,three);
    }
    return;
}
